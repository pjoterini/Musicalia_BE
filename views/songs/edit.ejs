<div class="background pixel-background-4"></div>

<h2>Edit Song</h2>
<form action="/songs/<%= song.id %>?_method=PUT" method="POST">
  <%- include('_form_fields') %>
  <div class="form-row form-row-end btn-row">
    <a class="btn btn-danger" href="/songs">Cancel</a>
    <button
      class="btn btn-primary"
      type="submit"
      onclick="return confirm('Are you sure you want to update this song info?');"
    >
      Update
    </button>
  </div>
</form>
